spring.data.mongodb.uri=${MONGODB_URI}
api.jikan.url=${JIKAN_API_URL}
api.rawg.key=${RAWG_API_KEY}
api.rawg.url=${RAWG_API_URL}

# Configurações do cache Redis
spring.data.redis.host=${REDIS_HOST:localhost}
spring.data.redis.port=${REDIS_PORT:6379}
spring.data.redis.password=${REDIS_PASSWORD:}
spring.data.redis.timeout=2000ms

# Configurações de HTTP client
spring.http.client.timeout.connect=5000
spring.http.client.timeout.read=10000